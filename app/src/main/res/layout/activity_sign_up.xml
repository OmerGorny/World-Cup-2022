<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:background="@drawable/background2"
    tools:context=".MainActivity">


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <ImageView
        android:id="@+id/football"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/navbarlogo" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:orientation="horizontal"
        android:weightSum="5">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="7">

            <EditText
                android:id="@+id/emailInput"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:background="#30C0C0C0"
                android:layout_weight="1"
                android:hint="@string/insert_email"
                android:inputType="textEmailAddress"
                />


            <EditText
                android:id="@+id/fullNameInput"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#30C0C0C0"
                android:hint="@string/insert_full_name"
                android:inputType="text"/>


            <Spinner
                android:id="@+id/spinnerCountry"
                android:layout_width="match_parent"
                android:autofillHints="Country"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="#30C0C0C0"
                android:spinnerMode="dropdown"/>

            <Spinner
                android:id="@+id/spinnerPlayers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="#30C0C0C0"
                android:spinnerMode="dropdown"/>


            <EditText
                android:id="@+id/passInput"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#30C0C0C0"
                android:gravity="center"
                android:hint="@string/insert_password"
                android:inputType="textPassword"/>



            <EditText
                android:id="@+id/rePassInput"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/insert_repassword"
                android:background="#30C0C0C0"
                android:inputType="textPassword"/>




            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>


            <Button
                android:textColor="#fff"
                android:backgroundTint="#ff0000"
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:text="Sign Up"/>





        </LinearLayout>


    </LinearLayout>


</LinearLayout>