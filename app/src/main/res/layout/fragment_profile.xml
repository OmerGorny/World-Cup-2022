<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background2"
    tools:context=".ui.profile.ProfileFragment"
    >


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"



        android:layout_centerHorizontal="true"

        android:background="@drawable/title3">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon"
            android:layout_gravity="center"
            android:layout_marginRight="113dp"

            ></ImageView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Profile "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <ImageButton
            android:id="@+id/btnOpenNavBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="65dp"
            android:src="@drawable/ic_baseline_arrow_circle_left_24"
            ></ImageButton>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:layout_marginTop="85dp"
        android:gravity="center">

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/title3">


            <TextView
                android:id="@+id/profileScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="42dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"

                ></TextView>

            <TextView
                android:id="@+id/totalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="Bets Earned "
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="134dp"
            android:layout_height="66dp"
            android:layout_centerHorizontal="true"

            android:background="@drawable/title4">

            <TextView
                android:id="@+id/topScoreer"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Top Scoreer "
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="134dp"
            android:layout_height="66dp"
            android:layout_centerHorizontal="true"

            android:background="@drawable/title4">




            <ImageView
                android:id="@+id/countryImage"
                android:layout_width="58dp"
                android:layout_height="53dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/argentina_flag" />
        </FrameLayout>


    </LinearLayout>


    <ListView
        android:id="@+id/listViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="215dp"
        android:layout_weight="1.5"

        android:divider="@color/black"
        android:dividerHeight="3dp" />


</FrameLayout>