<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background2"


tools:context=".ui.gallery.RulesFragment"
android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:weightSum="25">

        <TextView
            android:id="@+id/text1"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="30dp"
            android:text="Game Rules"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Welcome Gamblers to BetterThenYou We Created this game to Make Your World Cup Experience Much More Fun. We are Hoping That We will Make This One in Four Years Holiday Exciting And The Rules are Below."
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>
,

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="112dp">


    <TextView
        android:id="@+id/text3"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:textSize="14dp"
        android:gravity="center"
        android:text="The game will be Available thought All The Tournament , Your Duty is To put The Most Accurate Result For Every Game And Gather More Points then Your Mates And Be BetterThenThem. The Ways To gather Points are...">

    </TextView>




</LinearLayout>

<LinearLayout
